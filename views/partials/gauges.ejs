<script>
  setInterval(getDataLampu, 1000);
  setInterval(getDataSuhu, 1000);
  setInterval(getDataKelembapanTanah, 1000);
  setInterval(getwaterlevel, 1000);

  function getDataLampu() {
    $.ajax({
      type: "GET",
      headers: {
        "Content-Type": "application/json",
      },
      url: "https://kirei-iot-server.herokuapp.com/api/v1/lampu/lampu",
      success: function (data) {
        $("#lampu1").text(data.data[0].lampu1);
        $("#lampu2").text(data.data[0].lampu2);
      },
    });
  }

  function getDataSuhu() {
    $.ajax({
      type: "GET",
      headers: {
        "Content-Type": "application/json",
      },
      url: "https://kirei-iot-server.herokuapp.com/api/v1/kirei/suhu",
      success: function (data) {
        $("#suhuCelcius").text(data.data[0].celcius);
        $("#humidity").text(data.data[0].humidity);
      },
    });
  }

  function getDataKelembapanTanah() {
    $.ajax({
      type: "GET",
      headers: {
        "Content-Type": "application/json",
      },
      url: "https://kirei-iot-server.herokuapp.com/api/v1/tanah",
      success: function (data) {
        $("#tanah").text(data.data[0].kelembapanTanah);
      },
    });
  }

  function getwaterlevel() {
    $.ajax({
      type: "GET",
      headers: {
        "Content-Type": "application/json",
      },
      url: "https://kirei-iot-server.herokuapp.com/api/v1/water",
      success: function (data) {
        $("#waterlevel").text(data.data[0].waterlevel);
      },
    });
  }
</script>
