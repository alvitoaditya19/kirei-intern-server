                  <button class="btn-lamp-on btn-default noHover">
                    <img src="/images/icon-lamp1.svg" alt="" height="60" width="60" class="mb-2">
                    <h1 class="title">Lamp 1 ON</h1>
                  </button>
                </div>
              <% } %>
            </form>         
            <form
              action="/dashboard/lampu2/62414bbd1a431cac0b339833?_method=PUT"
              style="display: inline-block"
              method="POST"
              class="mb-3"
            >
              <% if(lampu.lampu2 === 'OFF') { %>
                <div class="col-lg-3">
                  <button class="btn-lamp-off btn btn-default">
                    <img src="/images/icon-lamp2.svg" alt="" height="60" width="60" class="mb-2">
                    <h1 class="title">Lamp 2 OFF</h1>
                  </button>
                </div>
              <% } else if(lampu.lampu2 === 'ON') { %>
                <div class="col-lg-3">
                  <button class="btn-lamp-on btn-default">
                    <img src="/images/icon-lamp1.svg" alt="" height="60" width="60" class="mb-2">
                    <h1 class="title">Lamp 2 ON</h1>
                  </button>
                </div>
              <% } %>
            </form>  
            <form
            action="/dashboard/pump1/62430c4028e1eef562010284?_method=PUT"
            style="display: inline-block"
            method="POST"
            >
              <% if(pump.pump1 === 'OFF') { %>
                <div class="col-lg-3">
                  <button class="btn-lamp-off btn btn-default noHover">
                    <img src="/images/icon-lamp2.svg" alt="" height="60" width="60" class="mb-2">
        
                    <h1 class="title">Pump 1 OFF</h1>
                  </button>
                </div>
              <% } else if(pump.pump1 === 'ON') { %>
                <div class="col-lg-3">
                  <button class="btn-lamp-on btn-default noHover">
                    <img src="/images/icon-lamp1.svg" alt="" height="60" width="60" class="mb-2">
                    <h1 class="title">Pump 1 ON</h1>
